<h1>Veiculos</h1>
<%= link_to 'Cadastrar Veiculo', new_veiculo_path, class: "btn btn-default pull-right" %>
<br><br>

<ul role="tablist" class="nav nav-tabs">
  <li class="active"><%= link_to "Todos", veiculos_path %></a></li>
  <li><a href="#">Carros</a></li>
  <li><a href="#">Motos</a></li>
</ul>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Placa</th>
      <th>Marca</th>
      <th>Ano</th>
      <th>Modelo</th>
      <th>Cor</th>
      <th>Alugado</th>
      <th>Valor diaria</th>
      <th>Garagem</th>
      <th>Categoria</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @veiculos.each do |veiculo| %>
      <tr>
        <td><%= veiculo.placa %></td>
        <td><%= veiculo.marca %></td>
        <td><%= veiculo.ano %></td>
        <td><%= veiculo.modelo %></td>
        <td><%= veiculo.cor %></td>
        <td><%= veiculo.alugado %></td>
        <td><%= veiculo.valor_diaria %></td>
        <td><%= veiculo.garagem.nome %></td>
        <td><%= veiculo.categoria.nome %></td>
        <td>
          <%= link_to '', veiculo,  remote: true, class: "glyphicon glyphicon-search", 'data-toggle' => 'modal', 'data-target' => '#myModal' %>
        </td>

        <td><%= link_to '', edit_veiculo_path(veiculo), class: "glyphicon glyphicon-edit" %></td>

        <td><%= link_to '', veiculo, method: :delete, data: { confirm: 'Are you sure?' }, class: "glyphicon glyphicon-remove-circle" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


<h1>Listing categorias</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Capacidade passageiros</th>
      <th>Qt bagabem pequena</th>
      <th>Qt bagabem grande</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categorias.each do |categoria| %>
      <tr>
        <td><%= categoria.nome %></td>
        <td><%= categoria.capacidade_passageiros %></td>
        <td><%= categoria.qt_bagabem_pequena %></td>
        <td><%= categoria.qt_bagabem_grande %></td>
        <td><%= link_to 'Show', categoria %></td>
        <td><%= link_to 'Edit', edit_categoria_path(categoria) %></td>
        <td><%= link_to 'Destroy', categoria, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

